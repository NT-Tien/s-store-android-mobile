<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cart.CartFragment">

    <Button
            android:text="Add Test Product"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:id="@+id/add_test_product_to_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:layout_marginTop="1dp"
            android:id="@+id/cart_item_list"
            app:layout_constraintTop_toBottomOf="@+id/add_test_product_to_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="36dp"
            android:paddingHorizontal="20dp" />

    <Button
            android:text="Clear All"
            android:layout_width="95dp"
            android:layout_height="43dp"
            android:id="@+id/btn_clear"
            app:layout_constraintStart_toEndOf="@+id/add_test_product_to_cart"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.058" />

    <Button
            android:layout_width="382dp"
            android:layout_height="58dp"
            android:id="@+id/btn_checkout"
            android:text="Checkout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>